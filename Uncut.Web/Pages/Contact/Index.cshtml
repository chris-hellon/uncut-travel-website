@page "/contact"
@model Uncut.Web.Pages.Contact.IndexModel

@{
    ViewData["Title"] = "Contact";

    <div class="custom-height mt-n5 py-5 bg-primary-dark">
        <div class="container py-5">
            <div class="row my-4">
                <div class="col-12" data-mdb-toggle="animation" data-mdb-animation-start="onLoad" data-mdb-animation="fade-in-left" data-mdb-animation-delay="200" data-mdb-animation-duration="800">
                    <h1 class="display-4 fw-bold ls-tight text-white">Contact</h1>
                    <h4 class="mb-0 text-secondary text-shadow-0">Remember, there are no silly questions</h4>
                </div>
            </div>
        </div>
    </div>

    <div class="container custom-mt bg-white rounded-top">
        <div class="row">
            <div class="col-lg-6 p-0">
                <h3 class="bg-primary text-white text-center py-2">Get In Touch</h3>
                <div class="row p-3">
                    <p>We'd love to hear about any of your questions.</p>
                    <p>Fill out the form to send a question to the helpdesk, or contact a hostel directly using the contact details below.</p>
                    <p>Alternatively, you can contact us directly using the following information:</p>
                    <p>Phone : (+84) 24 6295 8836</p>
                    <p>Email : info@uncuttravel.com</p>
                </div>
            </div>
            <div class="col-lg-6 p-0">
                <h3 class="bg-primary text-white text-center py-2">Send Us A Message</h3>
                <div class="row p-3">
                    @Html.DisplayFor(x => x.ContactComponent)
                </div>
            </div>
        </div>
    </div>
}
